#!/bin/bash

# find the parent directory.
while (!(test -f configure)) do cd ..; done

while (true; ) do

	if !(cvs upd -A); then
	    echo "Update failed";

	elif !(./autogen.sh); then
	    echo "Autogen failed";

#	elif !(make); then
#	    echo "Make failed";

	elif !(rpmbuild -bi ooo1.1.spec); then
	    echo "Failed to install";

	elif !(rpmbuild -bb ooo1.1.spec); then
	    echo "Failed to pack";

	fi

	sleep 10;
done
