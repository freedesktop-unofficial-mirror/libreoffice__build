#!/bin/bash

# find the parent directory.
while (!(test -f configure)) do cd ..; done

while (true; ) do

	DESTDIR="`pwd`/dest";

	echo "Started build `date`";
	rm -Rf $DESTDIR;
	export DESTDIR;

	if !(cvs upd -A); then
	    echo "Update failed";

	elif !(./autogen.sh); then
	    echo "Autogen failed";

#	elif !(make); then
#	    echo "Make failed";

	elif !(make install); then
	    echo "Make install failed";

	elif !(rpmbuild -bb ooo1.1.spec); then
	    echo "Failed to pack";

	fi

	sleep 10;
done
