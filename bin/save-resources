#!/bin/sh

#
# See setup for user tweakables.
#
. ./setup

# nothing to do if an older build is not available
test -f $OOBUILDDIR/*.[Ss]et.sh || exit 0;

cd $OOBUILDDIR

# Import all of the OO.o environment
if test "z$DISTRO" = "zWin32"; then
    test -f $OOBUILDDIR/*.set.sh && . $OOBUILDDIR/*.set.sh
else
    . $OOBUILDDIR/*.Set.sh
fi

# nothing to do if an older build is not available
test -d $SOLARVER/$UPD/$INPATH/bin || exit 0;

echo "Saving resource files..."

mkdir -p $SOLARVER/$UPD/$INPATH/bin.bak/ || exit 1;
for file in $SOLARVER/$UPD/$INPATH/bin/*.res ; do
    cp -vf $file $SOLARVER/$UPD/$INPATH/bin.bak/ || exit 1;
done

echo "done"

exit 0;
