#!/usr/bin/perl -w

$dir = shift (@ARGV) || die "pass path to patches directory";
@entries = ();

opendir(Dir, $dir) || die "Can't open $dir";
while ($a = readdir(Dir)) {
    $a =~ /\_(\d+)/ || next;
    push @entries, $a;
}
closedir(Dir);

@recent = sort { ($b =~ /\_(\d+)/)[0] <=> ($a =~ /\_(\d+)/)[0] } @entries;

print $recent[0];
