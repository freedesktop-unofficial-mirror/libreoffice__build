#! /bin/sh

set -e

if test $# -lt 1
then
	echo "gob-update <branch>"
	echo "branch     The 'master' branch"
	exit 1
fi

master_branch=$1

gob_bases=$(git-tag | grep '^gob-')
if test -z "$gob_bases"
then
    echo 'cannot find any gob-* tag, aborting'
    exit 1
fi

git-merge-bases --bases="$gob_bases" $master_branch
