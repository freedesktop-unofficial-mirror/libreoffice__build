#! /bin/sh

set -e

if test $# -lt 1
then
	echo "Usage: gob-update <branch>"
	echo "branch     The 'master' branch"
	exit 2
fi

master_branch=$1

gob_bases=$(git-tag | grep '^gob-')
if test -z "$gob_bases"
then
	echo 'cannot find any gob-* tag, aborting' 1>&2
	exit 1
fi

git-merge-gob --bases="$gob_bases" $master_branch

# Local Variables:
# sh-basic-offset:8
# End:
