#!/usr/bin/env perl

my $cwd = '.';
my $dirh;
print "removing libs: ";
opendir ($dirh, $cwd) || die "Can't open: $!";
while (my $name = readdir ($dirh)) {
    next if (-d "$cwd/$name/download"); # skip complex bits
    next if (! -d "$cwd/$name"); # skip non-directories
    `rm -f $cwd/$name/unxlngi*/lib/*`;
    print "$name ";
}
closedir ($dirh);
print "\n";
