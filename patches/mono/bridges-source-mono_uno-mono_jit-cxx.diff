+#include "osl/diagnose.h"
+extern "C" {
+#include "mono/metadata/appdomain.h"
+#include "mono/metadata/threads.h"
+}
+
+#include "mono_jit.h"
+
+using mono_uno::MonoJit;
+
+MonoJit::AttachGuard::CreationException::CreationException()
+{}
+
+MonoJit::AttachGuard::CreationException::CreationException(
+    CreationException const &)
+{}
+
+MonoJit::AttachGuard::CreationException::~CreationException()
+{}
+
+MonoJit::AttachGuard::CreationException &
+MonoJit::AttachGuard::CreationException::operator =(
+    CreationException const &)
+{
+    return *this;
+}
+
+MonoJit::AttachGuard::AttachGuard(
+    rtl::Reference< MonoJit > const & rMonoJit):
+    m_Jit(rMonoJit)
+{
+    OSL_ENSURE(m_xMachine.is(), "bad parameter");
+    m_Jit->attachThread(&m_bDetach);
+}
+
+MonoJit::AttachGuard::~AttachGuard()
+{
+    if (m_bDetach)
+        m_Jit->detachThread();
+}
+
+
+MonoJit::MonoJit( MonoDomain * pDomain, bool bDestroy )
+    : m_pDomain( pDomain ), m_bDestroy( bDestroy )
+{
+    OSL_ENSURE( pDomain != 0, "bad parameter" );
+}
+
+MonoJit::~MonoJit()
+{
+    if (m_bDestroy)
+    {
+        mono_runtime_cleanup( m_pDomain );
+    }
+}
+
+void MonoJit::attachThread( bool * pAttached ) const
+{
+    OSL_ENSURE( 0 != pAttached, "bad parameter");
+    if ( 0 == mono_thread_current() )
+    {
+        mono_thread_attach( m_pDomain );
+        *pAttached = true;
+    }
+    else /* Already attached */
+    {
+        *pAttached = false;
+    }
+}
+
+void MonoJit::detachThread() const
+{
+    MonoThread *thread = mono_thread_current();
+    OSL_ENSURE (0 != thread, "No current thread in MonoJit::detachThread");
+    mono_thread_detach( thread );
+}
