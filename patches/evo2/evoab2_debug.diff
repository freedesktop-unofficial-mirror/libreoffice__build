+void evo_traceStringMessage( const sal_Char* _pFormat, const ::rtl::OUString& oustring )
+{
+	rtl::OString ostring;
+	
+	ostring = ::rtl::OUStringToOString (oustring, RTL_TEXTENCODING_UTF8);
+        printf("evo_trace: %s",(ostring.pData->buffer));
+}
