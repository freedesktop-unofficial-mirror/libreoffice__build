+    	case VBAEVENT_WORKBOOK_SHEET_FOLLOWHYPERLINK:
+    	case VBAEVENT_WORKBOOK_SHEET_SELECTIONCHANGE:
+        {
+            nTab = getTabFromArgs( aArgs );
+            if( nTab != INVALID_TAB )
