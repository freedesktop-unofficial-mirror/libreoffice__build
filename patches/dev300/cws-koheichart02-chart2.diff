+void ChartTypeTemplate::setStackModePropertiesToChartType(const Reference<XChartType>& xChartType)
+{
+    Reference<beans::XPropertySet> xPropSet(xChartType, UNO_QUERY);
+    if (!xPropSet.is())
+        return;
