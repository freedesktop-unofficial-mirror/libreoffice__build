+    bool bStacked = false;
+    bool bPercent = false;
+    switch (getStackMode(0))
+    {
+        case StackMode_Y_STACKED:
+            bStacked = true;
+        break;
+        case StackMode_Y_STACKED_PERCENT:
+            bStacked = true;
+            bPercent = true;
+        break;
+        case StackMode_Z_STACKED:
+        break;
+        default:
+            ;
+    }
+
