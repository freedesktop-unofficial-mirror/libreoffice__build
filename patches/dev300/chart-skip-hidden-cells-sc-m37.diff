+                    ++nDataCount;
+                    USHORT nWidth = m_pDocument->GetColWidth(nCol, nTab);
+                    USHORT nHeight = m_pDocument->GetRowHeight(nRow, nTab);
+                    if (!nWidth || !nHeight)
