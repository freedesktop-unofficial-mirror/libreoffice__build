+        /* TODO: check for version once the bug in fglrx driver is fixed */
+        cbBrokenTexturesATI = (strcmp( (const char *) glGetString( GL_VENDOR ), "ATI Technologies Inc." ) == 0 );
+
+        delete instance;
+        initialized = true;
+    }
