+
+        instance = new OGLTransitionerImpl( NULL );
+        instance->initWindowFromSlideShowView( xView, 0, 0 );
+
+        if( instance->GLWin.HasGLXExtension("GLX_SGI_swap_control" ) ) {
+            // enable vsync
+            typedef GLint (*glXSwapIntervalProc)(GLint);
