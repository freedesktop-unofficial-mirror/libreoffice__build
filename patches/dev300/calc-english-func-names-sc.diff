+    if (bUpdateFuncNames)
+    {
+        // This needs to be called first since it may re-initialize the entire
+        // opcode map.
+        if (rOpt.GetUseEnglishFuncName())
+        {
+            // switch native symbols to English.
+            ScCompiler aComp(NULL, ScAddress());
