+            mrStream.Seek( nStreamPos );
+
+            while( (mrStream.GetError() == 0 )
+                   && ( mrStream.Tell() < nStreamSize )
+                   && ( mrStream.Tell() < maRecordHeader.GetRecEndFilePos() ) )
             {
                 mrStream >> aChildHeader;
 
