From: Jan Holesovsky <kendy@suse.cz>
Date: Fri, 14 May 2010 16:57:45 +0200
Subject: [PATCH 279/878] ia64-nss.diff

---
 nss/makefile.mk        |    2 +-
 solenv/inc/unxfbsdx.mk |    1 +
 solenv/inc/unxlnga.mk  |    1 +
 3 files changed, 3 insertions(+), 1 deletions(-)

diff --git a/nss/makefile.mk b/nss/makefile.mk
index f281cbd..e83d761 100644
--- a/nss/makefile.mk
+++ b/nss/makefile.mk
@@ -58,7 +58,7 @@ BUILD_OPT=1
 
 .IF "$(GUI)"=="UNX"
 .IF "$(OS)$(COM)"=="LINUXGCC"
-.IF "$(CPU)"=="X"
+.IF "$(BUILD64)"=="1"
 # force 64-bit buildmode
 USE_64:=1
 .EXPORT : USE_64
diff --git a/solenv/inc/unxfbsdx.mk b/solenv/inc/unxfbsdx.mk
index e9f62f1..760bb41 100644
--- a/solenv/inc/unxfbsdx.mk
+++ b/solenv/inc/unxfbsdx.mk
@@ -46,3 +46,4 @@ CFLAGSOPT=   					# no optimizing for non products
 
 # platform specific identifier for shared libs
 DLLPOSTFIX=fx
+BUILD64=1
diff --git a/solenv/inc/unxlnga.mk b/solenv/inc/unxlnga.mk
index 2ad71b7..29c7489 100644
--- a/solenv/inc/unxlnga.mk
+++ b/solenv/inc/unxlnga.mk
@@ -31,3 +31,4 @@
 CFLAGS+=-DIA64
 CFLAGSCXX+=-fno-use-cxa-atexit
 DLLPOSTFIX=la
+BUILD64=1
