+            }
+            break;
+            case BASEPROPERTY_UNIT:
+            {
+                sal_uInt16 nVal = 0;
+                if ( Value >>= nVal )
+                    ((MetricField*)GetWindow())->SetUnit( (FieldUnit) nVal );
+                break;
+            }
+            case BASEPROPERTY_CUSTOMUNITTEXT:
+            {
+                rtl::OUString aStr;
+                if ( Value >>= aStr )
+                    ((MetricField*)GetWindow())->SetCustomUnitText( aStr );
+                break;
