+		ENABLE_FPICKER_KDE="TRUE"
+		FPICKER_KDE_CFLAGS="-I$qt_incdir -I$kde_incdir -DQT_CLEAN_NAMESPACE -DQT_THREAD_SUPPORT -DFPICKER_KDE"
+		FPICKER_KDE_LIBS="-L$kde_libdir -lkdeui"
+	fi
+fi
