+ScTableProtection::ScTableProtection() :
+    maOptions(NONE),
+    mbProtected(false)
+{
+    // Set default values for the options.
+    maOptions[SELECT_LOCKED_CELLS]   = true;
+    maOptions[SELECT_UNLOCKED_CELLS] = true;
+}
