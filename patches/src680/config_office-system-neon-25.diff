# This patch requires system-neon-0.25.diff to work
--- config_office/configure.in.ark	2006-02-02 21:17:53.000000000 +0100
+++ config_office/configure.in	2006-02-02 21:18:44.000000000 +0100
@@ -3459,7 +3459,7 @@
 	test "$with_system_neon" != "no"; then
         AC_MSG_RESULT([external])
         PKG_CHECK_MODULES(NEON, neon >= 0.24.0)
-        PKG_CHECK_MODULES(NEON, neon < 0.25.0, , AC_MSG_ERROR([you need neon 0.24.x for system-neon]))
+        PKG_CHECK_MODULES(NEON, neon < 0.26.0, , AC_MSG_ERROR([you need neon 0.24.x or 0.25.x for system-neon]))
         NEON_CFLAGS="$NEON_CFLAGS -DSYSTEM_NEON -DUSE_DAV_LOCKS=1"
         SYSTEM_NEON=YES
 else
--- config_office/configure.ark	2006-02-02 21:18:56.000000000 +0100
+++ config_office/configure	2006-02-02 21:19:44.000000000 +0100
@@ -16861,23 +16861,23 @@
   else
      PKG_CONFIG_MIN_VERSION=0.9.0
      if $PKG_CONFIG --atleast-pkgconfig-version $PKG_CONFIG_MIN_VERSION; then
-        echo "$as_me:$LINENO: checking for neon < 0.25.0" >&5
-echo $ECHO_N "checking for neon < 0.25.0... $ECHO_C" >&6
+        echo "$as_me:$LINENO: checking for neon < 0.26.0" >&5
+echo $ECHO_N "checking for neon < 0.26.0... $ECHO_C" >&6
 
-        if $PKG_CONFIG --exists "neon < 0.25.0" ; then
+        if $PKG_CONFIG --exists "neon < 0.26.0" ; then
             echo "$as_me:$LINENO: result: yes" >&5
 echo "${ECHO_T}yes" >&6
             succeeded=yes
 
             echo "$as_me:$LINENO: checking NEON_CFLAGS" >&5
 echo $ECHO_N "checking NEON_CFLAGS... $ECHO_C" >&6
-            NEON_CFLAGS=`$PKG_CONFIG --cflags "neon < 0.25.0"`
+            NEON_CFLAGS=`$PKG_CONFIG --cflags "neon < 0.26.0"`
             echo "$as_me:$LINENO: result: $NEON_CFLAGS" >&5
 echo "${ECHO_T}$NEON_CFLAGS" >&6
 
             echo "$as_me:$LINENO: checking NEON_LIBS" >&5
 echo $ECHO_N "checking NEON_LIBS... $ECHO_C" >&6
-            NEON_LIBS=`$PKG_CONFIG --libs "neon < 0.25.0"`
+            NEON_LIBS=`$PKG_CONFIG --libs "neon < 0.26.0"`
             echo "$as_me:$LINENO: result: $NEON_LIBS" >&5
 echo "${ECHO_T}$NEON_LIBS" >&6
         else
@@ -16885,7 +16885,7 @@
             NEON_LIBS=""
             ## If we have a custom action on failure, don't print errors, but
             ## do set a variable so people can do so.
-            NEON_PKG_ERRORS=`$PKG_CONFIG --errors-to-stdout --print-errors "neon < 0.25.0"`
+            NEON_PKG_ERRORS=`$PKG_CONFIG --errors-to-stdout --print-errors "neon < 0.26.0"`
 
         fi
 
@@ -16900,8 +16900,8 @@
   if test $succeeded = yes; then
      :
   else
-     { { echo "$as_me:$LINENO: error: you need neon 0.24.x for system-neon" >&5
-echo "$as_me: error: you need neon 0.24.x for system-neon" >&2;}
+     { { echo "$as_me:$LINENO: error: you need neon 0.24.x or 0.25.x for system-neon" >&5
+echo "$as_me: error: you need neon 0.24.x or 0.25.x for system-neon" >&2;}
    { (exit 1); exit 1; }; }
   fi
 
