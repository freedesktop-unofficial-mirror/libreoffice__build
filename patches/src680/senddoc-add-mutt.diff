--- shell/source/unix/misc/senddoc.sh.orig	2007-02-18 15:52:27.000000000 +0100
+++ shell/source/unix/misc/senddoc.sh	2007-02-18 17:00:53.000000000 +0100
@@ -204,2 +204,52 @@
 		
+	mutt)
+	
+		while [ "$1" != "" ]; do
+			case $1 in
+				--from)
+					FROM="$2"
+					shift
+					;;
+				--to)
+					TO="${TO:-}${TO:+,}$2"
+					shift
+					;;
+				--cc)
+					CC="${CC:-}${CC:+,}$2"
+					shift
+					;;
+				--bcc)
+					BCC="${BCC:-}${BCC:+,}$2"
+					shift
+					;;
+				--subject)
+					SUBJECT="$2"
+					shift
+					;;
+				--body)
+					BODY=$(mktemp -q -t $(basename $0).mutt.XXXXXXXX)
+					echo "$2" > $BODY
+					shift
+					;;
+				--attach)
+					ATTACH="$2"
+					shift
+					;;
+				*)
+					;;
+			esac
+			shift;
+		done
+		
+		x-terminal-emulator -e ${MAILER} \
+			${FROM:+-e} ${FROM:+"set from=\"${FROM}\""} \
+			${CC:+-c} ${CC:+"${CC}"} \
+			${BCC:+-b} ${BCC:+"${BCC}"} \
+			${SUBJECT:+-s} ${SUBJECT:+"${SUBJECT}"} \
+			${BODY:+-i} ${BODY:+"${BODY}"} \
+			${ATTACH:+-a} ${ATTACH:+"${ATTACH}"} \
+			${TO:+"${TO}"} &
+		rm -f $BODY
+		;;
+		
 	evolution)
