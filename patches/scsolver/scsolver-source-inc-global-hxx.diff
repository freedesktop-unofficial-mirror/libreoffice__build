+
+template<typename Container>
+void printElements( const Container& cn, const char* sep = " " )
+{
+	using namespace ::std;
+	copy( cn.begin(), cn.end(), ostream_iterator<typename Container::value_type>( cout, sep ) );
+	cout << endl;
+}
