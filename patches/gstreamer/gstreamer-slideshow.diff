     class XShape;
@@ -155,7 +156,11 @@ namespace slideshow
                                                     const ::com::sun::star::uno::Sequence< ::com::sun::star::uno::Any >& rDXDeviceParams );
             
             ViewLayerSharedPtr					  mpViewLayer;
