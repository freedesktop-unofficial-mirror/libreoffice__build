+      	{
+       		((StackElement)(stack.peek()))._isDone = true;
+          	NodeList top = ((StackElement)(stack.peek()))._node.getChildNodes();
+          	for( int i = top.getLength()-1; i >= 0; --i )
+            	stack.push( new StackElement( top.item(i) ) );
