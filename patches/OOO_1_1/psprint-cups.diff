+CUPSManager* CUPSManager::tryLoadCUPS()
+{
+    CUPSManager* pManager = NULL;
+#ifdef ENABLE_CUPS
+    static const char* pEnv = getenv( "SAL_DISABLE_CUPS" );
+    
+    if( ! pEnv || ! *pEnv )
+    {
+        // try to load CUPS
+        CUPSWrapper* pWrapper = new CUPSWrapper();
