+CUPSManager::CUPSManager( CUPSWrapper* pWrapper ) :
+        PrinterInfoManager( CUPS ),
+        m_pCUPSWrapper( pWrapper ),
+        m_nDests( 0 ),
+        m_pDests( NULL ),
+        m_bNewDests( false )
